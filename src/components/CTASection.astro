---
import { Image } from "astro:assets";
import bgProduct from "@/assets/images/products/bg-product.webp";
---

<!-- About Section -->
<section class="grid md:grid-cols-2 grid-rows-2 bg-white min-h-screen">
    <!-- Content -->
    <div class="w-full flex items-center justify-end bg-primary">
        <div class="max-w-xl pr-20">
            <div class="flex items-center gap-4 mb-8">
                <header
                    class="relative text-5xl leading-tight font-bold text-white"
                >
                    <div class="absolute w-16 h-1 bg-orange"></div>
                    Have an idea in your mind?
