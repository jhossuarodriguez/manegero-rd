---
import { Image } from "astro:assets";
import Bento1 from "@/assets/images/Bento1.webp";
---

<section class="grid md:grid-cols-2 h-screen">
    <div
        class="bg-[#FDB827] flex items-center justify-center p-16 min-h-150 relative"
    >
        <div class="relative w-full max-w-md">
            <div class="relative w-full max-w-md">
                <Image
                    src={Bento1}
                    alt="Bento box"
                    class="w-full h-full object-cover"
                    loading="eager"
                />
            </div>
        </div>
        <div class="absolute bottom-0 right-0 bg-black w-138 h-48">
            <div class="mx-12 text-white">
                <h2 class="mt-10 uppercase font-bold text-base">
                    web projects
                </h2>
            </div>
        </div>
    </div>
    <div
        class="bg-[#FF4D5A] flex items-center justify-center p-16 text-white min-h-150"
    >
        <div class="max-w-lg pt-64 pb-40">
            <h1 class="text-white mb-8 text-5xl font-bold">
                We help to boost your digital application
            </h1>
            <p class="text-white/90 mb-10 text-3xl leading-normal font-light">
                Lorem ipsum dolor sit amet, consetetur sadipscing elit
            </p>
            <button
                class="bg-white text-[#FF4D5A] px-5 py-4 hover:bg-black hover:text-white transition-colors cursor-pointer"
            >
                Get Started
            </button>
        </div>
    </div>
</section>
